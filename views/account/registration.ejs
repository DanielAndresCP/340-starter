<%- messages() %>

<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>

<section class="registration-form">
    <h1><%= title %></h1>
    <p>All fields are required.</p>
    <form action="/account/registration" method="post">
        <label>
            *First name:
            <input
                type="text"
                name="account_firstname"
                id="account_firstname"
                required
            />
        </label>
        <label>
            *Last Name:
            <input
                type="text"
                name="account_lastname"
                id="account_lastname"
                required
            />
        </label>
        <label>
            *Email:
            <input
                type="email"
                name="account_email"
                id="account_email"
                required
            />
        </label>
        <label>
            *Password:
            <input
                type="password"
                name="account_password"
                id="account_password"
                required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
            />
        </label>
        <div>
            <p>Password Requirements:</p>
            <ul>
                <li>Must be 12 characters in length, minimum</li>
                <li>Must contain at least 1 capital letter</li>
                <li>Must contain at least 1 number</li>
                <li>Must contain at least 1 special character</li>
            </ul>
        </div>
        <button type="submit">Register</button>
    </form>
</section>
